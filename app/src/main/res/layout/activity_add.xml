<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSchemeActivity">


    <Button
        android:id="@+id/sleepButton"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:onClick="sleeping"
        android:text="Dormiu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wakeButton" />

    <Button
        android:id="@+id/changedButton"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:onClick="changed"
        android:text="Trocou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleepButton" />

    <Button
        android:id="@+id/feedButton"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:onClick="feed"
        android:text="Alimentou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changedButton" />

    <Button
        android:id="@+id/wakeButton"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:onClick="wakingUp"
        android:text="Acordou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addActivityTextView" />

    <TextView
        android:id="@+id/addActivityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/finishButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:onClick="concluir"
        android:text="Concluir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedButton" />


</androidx.constraintlayout.widget.ConstraintLayout>